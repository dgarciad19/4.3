<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pelis"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="196dp"
        android:layout_height="62dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="83dp"
        android:layout_marginEnd="199dp"
        android:layout_marginBottom="192dp"
        android:background="#DD0D0D"
        android:paddingLeft="22dp"
        android:paddingTop="3dp"
        android:text="@string/myRates"
        android:textColor="#000000"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/button4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button4"
        android:layout_width="322dp"
        android:layout_height="56dp"
        android:layout_marginStart="54dp"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="191dp"
        android:background="#DD0D0D"
        android:onClick="explicitIntentWeb"
        android:paddingTop="3dp"
        android:text="@string/explicit_Intent_Web"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/floatingActionButton4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButton4"
        android:layout_width="102dp"
        android:layout_height="80dp"
        android:layout_marginStart="259dp"
        android:layout_marginEnd="72dp"
        android:layout_marginBottom="67dp"
        android:background="#1E0808"
        android:clickable="true"
        android:foreground="@drawable/ic_baseline_add_circle_24"
        android:onClick="activity4"
        app:backgroundTint="#0C0A0A"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button4" />
</androidx.constraintlayout.widget.ConstraintLayout>